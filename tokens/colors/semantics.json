{
  "colors": {
    "$type": "color",
    "background": {
      "primary": { "value": "{colors.white.100}" },
      "secondary": { "value": "{colors.white.200}" },
      "tertiary": { "value": "{colors.white.300}" },
      "inverse": { "value": "{colors.black.100}" }
    },
    "text": {
      "base": { "value": "{colors.black.100}" },
      "primary": { "value": "{colors.black.100}" },
      "secondary": { "value": "{colors.gray.1100}" },
      "tertiary": { "value": "{colors.gray.500}" },
      "inverse": { "value": "{colors.white.200}" },
      "accent": { "value": "{colors.blue.1000}" }
    },
    "surface": {
      "primary": { "value": "{colors.white.200}" },
      "secondary": { "value": "{colors.white.100}" }
    },
    "border": {
      "primary": { "value": "{colors.gray.1000}" },
      "secondary": { "value": "{colors.gray.600}" },
      "accent": { "value": "{colors.blue.1000}" }
    },
    "separator": {
      "primary": { "value": "{colors.white.200}" },
      "secondary": { "value": "{colors.gray.1000}" }
    },
    "icon": {
      "primary": { "value": "{colors.black.100}" },
      "muted": { "value": "{colors.gray.100}" },
      "inverse": { "value": "{colors.white.100}" },
      "accent": { "value": "{colors.blue.1000}" }
    },
    "state": {
      "error": {
        "primary": { "value": "{colors.red.600}" }
      },
      "warning": {
        "primary": { "value": "{colors.yellow.600}" }
      },
      "info": {
        "primary": { "value": "{colors.blue.600}" }
      },
      "success": {
        "primary": { "value": "{colors.green.600}" }
      }
    }
  },
  "shadow": {
    "default": {
      "type": "shadow",
      "value": {
        "x": 0,
        "y": 4,
        "blur": 8,
        "spread": 0,
        "color": "rgba(0, 0, 0, 0.1)"
      }
    },
    "soft": {
      "type": "shadow",
      "value": {
        "x": 0,
        "y": 2,
        "blur": 4,
        "spread": 0,
        "color": "rgba(0, 0, 0, 0.5)"
      }
    }
  }
}
