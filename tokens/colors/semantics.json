{
  "colors": {
    "background": {
      "primary": { "$value": "{colors.white.100}" },
      "secondary": { "$value": "{colors.white.200}" },
      "inverse": { "$value": "{colors.black.100}" }
    },
    "text": {
      "primary": { "$value": "{colors.black.100}" },
      "secondary": { "$value": "{colors.grey.100}" },
      "tertiary": { "$value": "{colors.grey.200}" },
      "inverse": { "$value": "{colors.white.200}" },
      "accent": { "$value": "{colors.blue.100}" }
    },
    "surface": {
      "primary": { "$value": "{colors.white.200}" },
      "secondary": { "$value": "{colors.white.100}" }
    },
    "border": {
      "primary": { "$value": "{colors.grey.100}" },
      "secondary": { "$value": "{colors.grey.200}" },
      "accent": { "$value": "{colors.blue.100}" }
    },
    "separator": {
      "primary": { "$value": "{colors.white.200}" },
      "secondary": { "$value": "{colors.grey.200}" }
    },
    "icon": {
      "primary": { "$value": "{colors.black.100}" },
      "muted": { "$value": "{colors.grey.100}" },
      "accent": { "$value": "{colors.blue.100}" }
    }
  },
  "shadow": {
    "$type": "shadow",
    "default": { "$value": "0px 4px 8px rgba(0, 0, 0, 0.1)" },
    "soft": { "$value": "0px 2px 4px rgba(0, 0, 0, 0.05)" }
  }
}
