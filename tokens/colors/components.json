{
  "colors": {
    "$type": "color",
    "button": {
      "primary": {
        "bg": { "$value": "{colors.background.primary.$value}" },
        "hover": { "$value": "{colors.background.secondary.$value}" },
        "text": { "$value": "{colors.text.primary.$value}" }
      },
      "secondary": {
        "bg": { "$value": "{colors.background.secondary.$value}" },
        "hover": { "$value": "{colors.white.300.$value}" },
        "text": { "$value": "{colors.text.primary.$value}" }
      },
      "accent": {
        "bg": { "$value": "{colors.blue.100.$value}" },
        "hover": { "$value": "{colors.blue.200.$value}" },
        "text": { "$value": "{colors.white.100.$value}" }
      },
      "success": {
        "bg": { "$value": "{colors.green.100.$value}" },
        "hover": { "$value": "{colors.green.200.$value}" },
        "text": { "$value": "{colors.white.100.$value}" }
      },
      "error": {
        "bg": { "$value": "{colors.red.100.$value}" },
        "hover": { "$value": "{colors.red.200.$value}" },
        "text": { "$value": "{colors.white.100.$value}" }
      },
      "warning": {
        "bg": { "$value": "{colors.yellow.100.$value}" },
        "hover": { "$value": "{colors.yellow.200.$value}" },
        "text": { "$value": "{colors.black.100.$value}" }
      },
      "info": {
        "bg": { "$value": "{colors.blue.100.$value}" },
        "hover": { "$value": "{colors.blue.200.$value}" },
        "text": { "$value": "{colors.white.100.$value}" }
      }
    },
    "progress": {
      "bg": { "$value": "{colors.grey.100.$value}" },
      "fill": { "$value": "{colors.blue.100.$value}" },
      "hover": { "$value": "{colors.blue.200.$value}" },
      "success": {
        "bg": { "$value": "{colors.grey.200.$value}" },
        "fill": { "$value": "{colors.green.100.$value}" },
        "hover": { "$value": "{colors.green.200.$value}" }
      },
      "error": {
        "bg": { "$value": "{colors.grey.200.$value}" },
        "fill": { "$value": "{colors.red.100.$value}" },
        "hover": { "$value": "{colors.red.200.$value}" }
      }
    }
  }
}
